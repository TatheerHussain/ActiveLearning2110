mixin navmenu(id, side, style)
    - var style = (typeof style === 'undefined') ? "default" : style
    nav( id=id, role="navigation", class=["navmenu", "navmenu-" + style, "navmenu-fixed-" + side, "offcanvas"] )
        ul.nav.navmenu-nav
            block

mixin navbar-menu(brand, id, style)
    - var style = (typeof style === 'undefined') ? "default" : style
    div( class=["navbar", "navbar-" + style, "navbar-fixed-top"] )
        button.navbar-toggle.collapsed(type="button", data-toggle="offcanvas", data-target="#" + id, data-canvas="body")
            span.icon-bar.top-bar
            span.icon-bar.middle-bar
            span.icon-bar.bottom-bar
        a.navbar-brand(href="#")= brand
